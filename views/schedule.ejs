<!DOCTYPE html>
<html>
<head>
  <title>Meeting Room Schedule</title>
  <link rel="stylesheet" type="text/css" href="/stylesheets/schedule.css">
  <link href="https://fonts.googleapis.com/css2?family=Prompt&display=swap" rel="stylesheet">
</head>
<body style="background: rgb(216, 255, 152);">
<header class="no-print mb-4">
  <% include index.ejs %>
</header>

  <h2>Meeting Room Schedule</h2>

  <label for="datePicker">Select Date: </label>
  <input type="date" id="datePicker" style="margin-bottom: 12px; font-size: 16px; padding: 4px 8px;" />

  <div class="schedule-container">
    <!-- Left column: blank cell + rooms -->
    <div class="left-column">
      <div class="blank-cell">
        ห้องประชุม
      </div>
      <div class="rooms" id="roomsCol">
        <!-- Rooms listed here -->
      </div>
    </div>

    <!-- Timeline with time labels and room rows -->
    <div class="timeline" id="timeline">
      <div class="time-labels" id="timeLabels">
        <!-- Time labels 0-23 -->
      </div>
      <div id="roomRows">
        <!-- Room rows for meetings -->
      </div>
    </div>
  </div>

  <script src="/socket.io/socket.io.js"></script>
  <script src="/javascripts/schedule.js"></script>
</body>
</html>
