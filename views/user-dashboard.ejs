                    <strong>ผู้เข้าร่วม:</strong> <%= room.participants?.length || 0 %> คน
                    <% if (room.participants && room.participants.length > 0) { %>
                      (<%= room.participants.map(p => p.name.split(' ')[0]).join(', ') %>)
                    <% } %>
                  </p>
                  <p class="card-text mb-1">
                    <strong>วันที่:</strong> <%= new Date(room.datetimein).toLocaleDateString() %>
                    <strong>เวลา:</strong> <%= new Date(room.datetimein).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' }) %> -
                    <%= new Date(room.datetimeout).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' }) %>
                  </p>
                  <p class="card-text mb-1"><strong>สถานะ:</strong>
                    <span class="badge bg-<%= room.approval === 'อนุมัติ' ? 'success' : 'danger' %>"><%= room.approval %></span>
                  </p>
                  <a href="/user/edit-meeting/<%= room._id %>" class="btn btn-warning btn-sm me-2">แก้ไข</a>
                  <button class="btn btn-danger btn-sm" onclick="cancelMeeting('<%= room._id %>')">ยกเลิก</button>
                </div>
              </div>
            <% }); %>
            <% if (room3Past.length > 5) { %>
              <button type="button" class="btn btn-secondary w-100" onclick="showMoreRooms('room3-past', this)">เพิ่มเติม</button>
            <% } %>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <script src="/javascripts/userdashboard.js"></script>
</body>
</html>